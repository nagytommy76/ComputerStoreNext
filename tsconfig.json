{
   "compilerOptions": {
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "bundler",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,
      "plugins": [
         {
            "name": "next"
         }
      ],
      "paths": {
         "@/*": ["./*"],
         "@/Theme/*": ["./utils/Theme/*"],
         "@/reduxStore/*": ["./utils/redux/*"],
         "@DBConnect": ["./utils/dbConnect.ts"],
         "@Types/*": ["./types/*"],
         "@Models/*": ["./models/*"],
         "@images/*": ["./assets/images/*"],
         "@ShopComponents/*": ["./components/Shop/*"],
         "@/Services/*": ["./services/*"],
         "@/Suspense/*": ["./components/Suspense/*"],
         "@/Details/*": ["./components/Details/*"]
      }
   },
   "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
   "exclude": ["node_modules"]
}
